.side
  .side__header
    .side__header__box
      %p.UserName 
        = current_user.name
      .side__header__box__Menu
        = link_to new_group_path, {class: "btn"} do
          = icon('fas', 'edit',  class: "icon-edit")
          %span<>
        = link_to edit_user_path(current_user), {class: "btn"} do 
          = icon('fas', 'cog',  class: "icon-cog")
  .GroupList
    - current_user.groups.each do |group|
      .groups
        = link_to group_messages_path(group.id) do
          .groups__name 
            = group.name
          .groups__message 
            = group.show_last_message